<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Expression</th>
    <th>Answer</th>
    <th>Language answer</th>
    <th>Correct answer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.expression.english %></td>
    <td><%= exercise.answer %></td>
    <td><%= exercise.language_answer %></td>
    <td><%= exercise.correct_answer %></td>
    <td><%= link_to 'Show', exercise %></td>
  </tr>
<% end %>
</table>

<br />
<%= form_tag new_exercise_path %>
<%= select_tag "language", options_for_select(Exercise::LANGUAGES) %>
<%= submit_tag 'New Exercise' %>
<%= end_form_tag %>