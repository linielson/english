<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Expression</th>
    <th>Answer</th>
    <th>Language answer</th>
    <th>Correct answer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.expression.english %></td>
    <td><%= exercise.answer %></td>
    <td><%= exercise.language_answer %></td>
    <td><%= exercise.correct_answer %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

